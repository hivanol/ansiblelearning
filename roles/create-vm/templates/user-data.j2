#cloud-config
hostname: {{ vm_name }}
users:
  - name: ivan
    groups: sudo
    shell: /bin/bash
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    lock_passwd: false
    ssh-authorized-keys:
     - ssh-rsa  ivan
     - ssh-rsa  root@vm1
chpasswd:
  list: |
    ivan:123456
  expire: false

runcmd:
  - systemctl restart networking
  - touch /etc/cloud/cloud-init.disabled

